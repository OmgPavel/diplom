        <Button Text="Основная информация о крупнейших автопроизводителях" Clicked="avtoproizvoditeli" TextColor="White"/>
        <Button Text="Основная информация о марках автомобиля" Clicked="markiavto" TextColor="White"/>
        <Button Text="Информация по страхованию автомобиля" Clicked="strahovanie" TextColor="White"/>
        <Button Text="О программе" Clicked="Oprogramme" TextColor="White"/>
