<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AvtoMobil.Strahovka">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Frame BackgroundColor="White" Padding="24" CornerRadius="0">
                <Label Text="Основная информация по страхованию автомобиля" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
            </Frame>
            <Button Text="Посмотреть информацию про страхование" Clicked="infostrah"/>
            <Button Text="Рассчитать страхование автомобиля" Clicked="raschet"/>
            <Button Text="Назад" Clicked="nazad"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>